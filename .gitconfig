[user]
    name = Your Name
    email = your.email@example.com

[core]
    editor = vim
    autocrlf = input

[init]
    defaultBranch = main

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    ca = commit -a
    cm = commit -m
    unstage = reset HEAD --

[color]
    ui = auto
